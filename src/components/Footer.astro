---
import LFMVLogo from "./Logo.astro";
---

<footer class="py-12 px-4 bg-gray-900/30">
	<div class="max-w-4xl mx-auto text-center">
		<div
			class="flex flex-col sm:flex-row gap-8 items-center justify-center mb-6"
		>
			<div class="flex justify-center">
				<div class="relative w-12 h-12">
					<div
						class="absolute w-full h-full blur-xl rounded-full"
						style={{
							background: `
						radial-gradient(circle at 5% 0%, var(--color-solid), transparent),
						radial-gradient(circle at 10% 50%, var(--color-svelte), transparent),
						radial-gradient(circle at 5% 5%, var(--color-react), transparent)
						;`,
						}}
					>
					</div>
					<!-- <Music class="h-8 w-8 text-white relative z-10" /> -->
					<LFMVLogo class="h-8 w-8 text-white relative z-10" />
				</div>
			</div>
			<p class="text-gray-400">
				<span class="font-mono">@lastfm-viewer</span> • MIT License
			</p>
			<ul class="flex justify-center gap-6">
				<a
					href="#"
					class="text-gray-500 hover:text-white transition-colors"
				>
					Documentation
				</a>
				<a
					href="#"
					class="text-gray-500 hover:text-white transition-colors"
				>
					Examples
				</a>
				<a
					href="https://github.com/ZOASR/lastfm-viewer"
					class="text-gray-500 hover:text-white transition-colors"
				>
					GitHub
				</a>
			</ul>
		</div>

		<p class="text-xs text-gray-600">
			Built with ❤️ for the Last.fm community
		</p>
	</div>
</footer>
