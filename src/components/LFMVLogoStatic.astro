---
type Props = {
	class?: string;
	transition?: string;
};
const { class: className, transition }: Props = Astro.props;
---

{/* Logo */}
<div
	transition:name={transition}
	class:list={[
		className,
		"relative size-40 flex items-center justify-center",
	]}
>
	<div
		class="absolute w-full h-full blur-lg rounded-full"
		style={{
			background: `
			radial-gradient(circle at 5% 0%, var(--color-solid), transparent),
			radial-gradient(circle at 10% 50%, var(--color-svelte), transparent),
			radial-gradient(circle at 5% 5%, var(--color-react), transparent)
			;`,
		}}
	>
	</div>
	<div class="relative w-full">
		<figure
			class:list={["lfmv_logo cursor-pointer"]}
			aria-details="lfmv-logo"
		>
			<svg
				id="Layer_1"
				data-name="Layer 1"
				xmlns="http://www.w3.org/2000/svg"
				viewBox="0 0 490 315"
				class="filter drop-shadow-[0_0_10px_rgba(0,0,0,0.4)]"
			>
				<rect
					id="rect-front"
					width="100%"
					height="100%"
					stroke-width="0"></rect>
				<rect id="rect-back" width="100%" height="100%" stroke-width="0"
				></rect>
				<defs>
					<linearGradient
						x1="0%"
						y1="50%"
						x2="100%"
						y2="100%"
						id="Gradient1"
					>
						<stop class="stop1" offset="0%"></stop>
						<stop class="stop2" offset="50%"></stop>
						<stop class="stop3" offset="100%"></stop>
					</linearGradient>
				</defs>
				<mask id="animated-mask">
					<polyline
						id="lf"
						class="cls-1"
						points="10 10 10 310 119 310 119 160 119 10 193 10"
					></polyline>
					<line
						id="dash"
						class="cls-1"
						x1="119"
						y1="160"
						x2="156"
						y2="160"></line>
					<polyline
						id="M"
						class="cls-1"
						points="338,10 265,160 265,160 193,10 120,309 "
					></polyline>
					<polyline
						id="V"
						class="cls-1"
						points="338 10 410 309 482 10"></polyline>
					<polyline
						class="cls-2"
						id="hill"
						points="385.54 310 329.26 88.93 329.19 88.92 265.75 220.54 265.68 220.54 202.25 88.92 202.18 88.93 145.9 310 385.54 310"
					></polyline>
				</mask>
			</svg>
		</figure>
	</div>
</div>

<style lang="scss">
	.lfmv_logo {
		--animation-timing: 0.2s;
		--logo-color: #949494;
		--stroke-wide: 15px;
		--stroke-thin: 5px;
		position: relative;
		width: 100%;
		height: auto;
		margin: auto 0;
		border-radius: 10px;
		background: inherit;
		z-index: 6;
		.stop1,
		.stop2,
		.stop3 {
			stop-color: #d6d6d6;
			transition: stop-color var(--animation-timing) ease-in-out;
		}

		.cls {
			&-1,
			&-2 {
				--logo-color: #fff;
				fill: none;
				stroke-linecap: round;
				stroke-linecap: square;
				stroke-width: var(--stroke-thin);
				stroke: var(--logo-color);
			}
			&-2 {
				stroke-width: 5px;
				stroke: none;
				fill: var(--logo-color);
			}
		}
		#hill {
			stroke-width: 10;
			stroke: #ffffff75;
			stroke-dasharray: 200 100;
			stroke-dashoffset: 500;
			stroke-linecap: round;
			stroke-linejoin: round;
			transition: all 1s ease-in-out;
		}

		&:hover {
			.stop1 {
				stop-color: #2c4f7c;
			}
			.stop2 {
				stop-color: #61dafb;
			}
			.stop3 {
				stop-color: #ff3e00;
			}
		}
	}

	#rect-back,
	#rect-front {
		mask: url(#animated-mask);
		fill: url(#Gradient1);
	}
</style>
